<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragmentclass.Manuu"
    android:orientation="vertical"
    android:background="#DDE6ED">

   <FrameLayout
       android:id="@+id/manuuFramlayout"
       android:layout_width="match_parent"
       android:layout_height="match_parent">





       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">




           <androidx.cardview.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="150dp"
               app:cardCornerRadius="8dp"
               app:cardBackgroundColor="@color/light_blue"
               app:cardElevation="10dp"
               android:padding="5dp"
               app:cardPreventCornerOverlap="true">

               <androidx.constraintlayout.widget.ConstraintLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">


                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:layout_marginTop="15dp"
                       android:src="@drawable/logo"
                       app:layout_constraintEnd_toStartOf="@+id/back_manue"
                       app:layout_constraintHorizontal_bias="0.5"
                       app:layout_constraintStart_toStartOf="parent"
                       app:layout_constraintTop_toTopOf="parent" />


                   <TextView
                       android:id="@+id/menu_profile_name"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginStart="15dp"
                       android:layout_marginTop="60dp"
                       android:text=" Manish sahu"
                       android:textSize="20sp"
                       android:textStyle="bold"
                       app:layout_constraintBottom_toBottomOf="parent"
                       app:layout_constraintStart_toStartOf="parent"
                       app:layout_constraintTop_toTopOf="parent" />

                   <com.google.android.material.imageview.ShapeableImageView
                       android:id="@+id/person_manu"
                       android:layout_width="48dp"
                       android:layout_height="44dp"
                       android:layout_marginStart="200dp"
                       app:layout_constraintBottom_toBottomOf="@+id/menu_profile_name"
                       app:layout_constraintStart_toEndOf="@+id/menu_profile_name"
                       app:layout_constraintTop_toTopOf="@+id/menu_profile_name"
                       app:shapeAppearanceOverlay="@style/circular"
                       app:srcCompat="@drawable/profile_manish" />

                   <ImageView
                       android:id="@+id/back_manue"
                       android:layout_width="45dp"
                       android:layout_height="39dp"
                       android:layout_marginEnd="16dp"
                       android:layout_marginBottom="10dp"
                       android:src="@drawable/baseline_close_24"
                       app:layout_constraintBottom_toTopOf="@+id/person_manu"
                       app:layout_constraintEnd_toEndOf="parent"
                       app:layout_constraintTop_toTopOf="parent"
                       app:layout_constraintVertical_bias="0.47" />


               </androidx.constraintlayout.widget.ConstraintLayout>

           </androidx.cardview.widget.CardView>


           <androidx.cardview.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="150dp"
               app:cardCornerRadius="8dp"
               android:layout_marginTop="3dp"
               app:cardBackgroundColor="@color/light_blue"
               app:cardElevation="10dp"
               android:padding="5dp"
               app:cardPreventCornerOverlap="true">

               <androidx.constraintlayout.widget.ConstraintLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">


                   <TextView
                       android:id="@+id/account"
                       android:layout_width="166dp"
                       android:layout_height="35dp"
                       android:layout_marginStart="20dp"
                       android:layout_marginTop="36dp"
                       android:background="@drawable/corner_menu"
                       android:gravity="center"
                       android:text="Profile"
                       android:paddingTop="5dp"
                       android:paddingBottom="5dp"
                       android:textSize="20sp"
                       app:layout_constraintEnd_toStartOf="@+id/order"
                       app:layout_constraintHorizontal_bias="0.0"
                       app:layout_constraintStart_toStartOf="parent"
                       app:layout_constraintTop_toTopOf="parent" />

                   <TextView
                       android:id="@+id/transaction"
                       android:layout_width="166dp"
                       android:layout_height="35dp"
                       android:text="Transaction"
                       android:textSize="20sp"
                       android:gravity="center"
                       android:background="@drawable/corner_menu"
                       app:layout_constraintBottom_toBottomOf="parent"
                       app:layout_constraintEnd_toEndOf="@+id/account"
                       app:layout_constraintHorizontal_bias="0.0"
                       app:layout_constraintStart_toStartOf="@+id/account"
                       app:layout_constraintTop_toBottomOf="@+id/account"
                       app:layout_constraintVertical_bias="0.44" />

                   <TextView
                       android:id="@+id/order"
                       android:layout_width="166dp"
                       android:layout_height="35dp"
                       android:layout_marginTop="36dp"
                       android:layout_marginEnd="20dp"
                       android:background="@drawable/corner_menu"
                       android:gravity="center"
                       android:text="Order"
                       android:textSize="20sp"
                       app:layout_constraintEnd_toEndOf="parent"
                       app:layout_constraintTop_toTopOf="parent" />

                   <TextView
                       android:id="@+id/watch_list"
                       android:layout_width="166dp"
                       android:layout_height="35dp"
                       android:text="Watch list"
                       android:textSize="20sp"
                       android:gravity="center"
                       android:background="@drawable/corner_menu"
                       app:layout_constraintBottom_toBottomOf="parent"
                       app:layout_constraintEnd_toEndOf="@+id/order"
                       app:layout_constraintStart_toStartOf="@+id/order"
                       app:layout_constraintTop_toBottomOf="@+id/order"
                       app:layout_constraintVertical_bias="0.381" />
               </androidx.constraintlayout.widget.ConstraintLayout>

           </androidx.cardview.widget.CardView>

           <androidx.cardview.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="150dp"
               app:cardCornerRadius="8dp"
               android:layout_marginTop="3dp"
               app:cardBackgroundColor="@color/light_blue"
               app:cardElevation="10dp"
               android:padding="5dp"
               app:cardPreventCornerOverlap="true">

               <androidx.constraintlayout.widget.ConstraintLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">


                   <TextView
                       android:id="@+id/offer"
                       android:layout_width="166dp"
                       android:layout_height="35dp"
                       android:layout_marginStart="20dp"
                       android:layout_marginTop="36dp"
                       android:background="@drawable/corner_menu"
                       android:gravity="center"
                       android:paddingTop="5dp"
                       android:paddingBottom="5dp"
                       android:text=" Offer"
                       android:textSize="20sp"
                       app:layout_constraintEnd_toStartOf="@+id/reward"
                       app:layout_constraintHorizontal_bias="0.0"
                       app:layout_constraintStart_toStartOf="parent"
                       app:layout_constraintTop_toTopOf="parent" />

                   <TextView
                       android:id="@+id/settings"
                       android:layout_width="166dp"
                       android:layout_height="35dp"
                       android:background="@drawable/corner_menu"
                       android:gravity="center"
                       android:text="Settings"
                       android:textSize="20sp"
                       app:layout_constraintBottom_toBottomOf="parent"
                       app:layout_constraintEnd_toEndOf="@+id/offer"
                       app:layout_constraintHorizontal_bias="0.0"
                       app:layout_constraintStart_toStartOf="@+id/offer"
                       app:layout_constraintTop_toBottomOf="@+id/offer"
                       app:layout_constraintVertical_bias="0.44" />

                   <TextView
                       android:id="@+id/reward"
                       android:layout_width="166dp"
                       android:layout_height="35dp"
                       android:layout_marginTop="36dp"
                       android:layout_marginEnd="20dp"
                       android:background="@drawable/corner_menu"
                       android:gravity="center"
                       android:text="Reward"
                       android:textSize="20sp"
                       app:layout_constraintEnd_toEndOf="parent"
                       app:layout_constraintTop_toTopOf="parent" />

                   <TextView
                       android:id="@+id/help"
                       android:layout_width="166dp"
                       android:layout_height="35dp"
                       android:background="@drawable/corner_menu"
                       android:gravity="center"
                       android:text=" Help"
                       android:textSize="20sp"
                       app:layout_constraintBottom_toBottomOf="parent"
                       app:layout_constraintEnd_toEndOf="@+id/reward"
                       app:layout_constraintStart_toStartOf="@+id/reward"
                       app:layout_constraintTop_toBottomOf="@+id/reward"
                       app:layout_constraintVertical_bias="0.381" />
               </androidx.constraintlayout.widget.ConstraintLayout>

           </androidx.cardview.widget.CardView>

           <androidx.cardview.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="80dp"
               app:cardCornerRadius="8dp"
               android:layout_marginTop="3dp"
               app:cardBackgroundColor="@color/light_blue"
               app:cardElevation="10dp"
               android:padding="5dp"

               app:cardPreventCornerOverlap="true">

               <androidx.constraintlayout.widget.ConstraintLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">


                   <TextView
                       android:id="@+id/login"
                       android:layout_width="166dp"
                       android:layout_height="35dp"
                       android:layout_marginStart="20dp"
                       android:background="@drawable/corner_menu"
                       android:gravity="center"
                       android:paddingTop="5dp"
                       android:paddingBottom="5dp"
                       android:text="Login"
                       android:textSize="20sp"
                       app:layout_constraintBottom_toBottomOf="parent"
                       app:layout_constraintEnd_toStartOf="@+id/logout"
                       app:layout_constraintHorizontal_bias="0.0"
                       app:layout_constraintStart_toStartOf="parent"
                       app:layout_constraintTop_toTopOf="parent" />


                   <TextView
                       android:id="@+id/logout"
                       android:layout_width="166dp"
                       android:layout_height="35dp"
                       android:layout_marginEnd="20dp"
                       android:background="@drawable/corner_menu"
                       android:gravity="center"
                       android:text="Logout"
                       android:textSize="20sp"
                       app:layout_constraintBottom_toBottomOf="parent"
                       app:layout_constraintEnd_toEndOf="parent"
                       app:layout_constraintTop_toTopOf="parent" />


               </androidx.constraintlayout.widget.ConstraintLayout>

           </androidx.cardview.widget.CardView>
       </LinearLayout>

   </FrameLayout>





</LinearLayout>