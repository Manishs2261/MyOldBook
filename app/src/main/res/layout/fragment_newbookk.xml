<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragmentclass.newbookk"
    android:background="#F1EDED"
    android:id="@+id/newBookk_framelayout">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="@color/hader_blue"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchViewNewBook"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginLeft="27dp"
            android:background="@drawable/search_corner"
            android:backgroundTint="@color/white"
            app:iconifiedByDefault="false"
            app:queryHint="Search" />

        <ImageView
            android:id="@+id/new_u_mic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"


            app:srcCompat="@drawable/baseline_keyboard_voice_24" />

    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyleview_Newbookk"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="66dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


    </androidx.recyclerview.widget.RecyclerView>

</FrameLayout>